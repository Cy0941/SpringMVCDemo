    <!-- 防止@ResponseBody出现的中文乱码 -->

    <mvc:resources location="/static/" mapping="/static/**"/>
    <mvc:annotation-driven>
        <mvc:argument-resolvers>
            <bean class="org.format.demo.resolver.FormObjArgumentResolver"/>
            <bean class="org.format.demo.resolver.CustomerArgumentResolver"/>
        </mvc:argument-resolvers>
    </mvc:annotation-driven>
